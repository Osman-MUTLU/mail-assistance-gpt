    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "main:app",
                "--reload"
            ],
            "envFile": "${workspaceFolder}/backend/.env",
            "jinja": true,
            "justMyCode": true,
        },
        {
            "command": "cd frontend | npm start",
            "name": "Frontend: React",
            "request": "launch",
            "type": "node-terminal"
        },
    ]
}